/** 
 * This is the "dev" TS Config which includes typechecking for test. 
 * This is used by ESLint to provide TypeScript errors for test files.
 */
{
  "compilerOptions": {
    /* Visiter https://aka.ms/tsconfig.json pour en savoir plus */
    "target": "es2017",
    "module": "es2022",
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "dom.Iterable",
      "es2020"
    ],
    "emitDeclarationOnly": true,
    "declaration": true,
    "rootDir": ".",
    "strict": true,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false, /* Voir https://lit.dev/docs/components/properties/#avoiding-issues-with-class-fields */
    "removeComments": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "types": [
    ]
  },
  "include": [
    "src"
  ]
}
